<form action="/admin/editItem/<%= @profile.id %>" method="post" id="edit">
	<input type="hidden" name="_method" value="put">  
	<div class="inputWrap">
		<label for="name">Name</label>
		<input type="text" name="name" class="nameInput" value="<%= @profile.name %>" />
	</div>
	<div class="inputWrap">
		<label for="email">Email</label>
		<input type="text" name="email" class="emailInput"  value="<%= @profile.email %>"/>
	</div>
	<div class="inputWrap">
		<p class="textLabel">Write Profile Description</p>
		<textarea rows="4" cols="10" name="description" class="descriptionTextarea"><%= @profile.description %></textarea>
	</div>
	<div class="inputWrap">
		<label for="beerbongs">Enter # of Beerbongs Sold</label>
		<input type="text" name="beerbongs" class="beerbongsInput" value="<%= @profile.beerbong.sales %>" />
	</div>
	<div class="inputWrap">
		<label for="profileImage">Add New Profile Image</label>
		<input type="text" name="profileImage" class="profileImageInput" value="<%= @profile.profileImgPath %>" />
	</div>
	<button type="submit" class="submitButton" id="profileSubmit">Submit Edited Profile</button>
	<div class="group"></div>
</form>
