<div class="adminHeader">
	<a class="adminNav" href="/admin">Â« Back to Admin</a>
	<br />
	<h2>Edit Profile</h2>
	<p class="formDescription">Click on the "edit" link to edit that users profile.</p>
</div>
<div class="profilesWrap">
	<% if @profiles.count > 0 %>
		<% @profiles.each do |profile| %> 
			<div class="profile">
				<img src="<% @profile.profileImgPath %>" alt="<% @profile.name %>'s Profile Picture thumbnail" class="profileImgThumb" />
				<div class="infoWrap">
					<h2 class="profileName"><% @profile.name %></h2>
					<p class="profileDescription"><% @profile.description %></p>
					<br />
				</div>
				<a href="/admin/editItem/<% @profile.id %>">Edit Profile</a>
			</div>
		<% end %>
	<% else %>
		<p style="margin-top: 16px;">No Profiles to Display - Add some <a href="/admin/add">here</a></p>
	<% end %>
</div>
